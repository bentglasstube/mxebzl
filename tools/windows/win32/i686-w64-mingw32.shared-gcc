#!/bin/bash --norc

declare -a ARGS=()

while [ "${1+defined}" ]; do
  case "$1" in
    -Wl,@*)
        ARGS=("${ARGS[@]}" -Wl,--start-group "$1")
        ;;
    *)
        ARGS=("${ARGS[@]}" "$1")
        ;;
  esac
  shift
done

PATH="external/mingw_compiler_win32/mxe/usr/libexec/gcc/i686-w64-mingw32.shared/5.4.0:external/mingw_compiler_win32/mxe/usr/bin:$PATH"
exec -a i686-w64-mingw32.shared-gcc \
    external/mingw_compiler_win32/mxe/usr/bin/i686-w64-mingw32.shared-gcc \
    "${ARGS[@]}"
